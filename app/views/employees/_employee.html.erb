<ul class="list-group">
  <li class="list-group-item">Name: <b><%= @employee.full_name %></b></li>
  <li class="list-group-item">Address: <b><%= format_address %></b></li>
  <li class="list-group-item">Age: <b><%= format_age %></b></li>
  <li class="list-group-item">Contact Details: <b><%= format_contact_details %></b></li>
  <li class="list-group-item">Birthday: <b><%= format_birthday %></b></li>
  <li class="list-group-item">   
    <div class="row field-margin no-print"> 
      <div class="col-md-2 col-md-offset-8">
        <%= link_to "Edit", edit_employee_path(@employee), class: "btn btn-lg btn-warning btn-block" %>
      </div>
      <div class="col-md-2">
        <%= link_to "Delete", employee_path(@employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-danger btn-block" %>
      </div>    
    </div>
  </li>
</ul>