<ul class="list-group">
  <li class="list-group-item">Name: <b><%= @employee.full_name %></b></li>
  <li class="list-group-item">Address: <b><%= @employee.address %></b></li>
  <li class="list-group-item">Age: <b><%= distance_of_time_in_words(Date.current, @employee.birthday) %> old</b></li>
  <li class="list-group-item">Contact Details: <b><%= format_contact_details(@employee.contact_details) %></b></li>
  <li class="list-group-item">Birthday: <b><%= @employee.birthday %></b></li>
  <li class="list-group-item">
    <div class="row no-print">
      <div class="col-xs-6 col-lg-2"></div>
      <div class="col-xs-6 col-lg-2"></div>
      <div class="col-xs-6 col-lg-2"></div>
      <div class="col-xs-6 col-lg-2"></div>
      <div class="col-xs-6 col-lg-2">
        <%= link_to "Edit", edit_employee_path(@employee), class: "btn btn-lg btn-warning btn-block" %>
      </div>
      <div class="col-xs-6 col-lg-2">
        <%= link_to "Delete", employee_path(@employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-danger btn-block" %>
      </div>
    </div>
  </li>
</ul>