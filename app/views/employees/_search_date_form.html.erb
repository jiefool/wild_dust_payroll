<%= form_tag(employee_path(@employee), :method => "get", id: "sew-date-form") do %>
  <div class="col-md-4">
    <h4>Date: <%= time_tag @sewed_date.to_date %></h4>
  </div>
  <div class="col-md-4 col-md-offset-2 no-print">
    <%= select_tag :sew_date, options_for_select(@employee.sewed_clothings.sewed_clothing_dates, @sewed_date), {class: "form-control", prompt: "Select date"} %>
  </div>
  <div class="col-md-2 no-print">
    <%= submit_tag "Search", class: "btn btn-primary btn-block" %>
  </div>
<% end %>