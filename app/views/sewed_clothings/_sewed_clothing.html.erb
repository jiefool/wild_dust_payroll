<%= content_tag_for(:tr, sewed_clothing) do %>
  <div class="col-md-1"><span class="field-label">#: </span><%= index + 1 %></div>
  <div class="col-md-2"><span class="field-label">Owner Name: </span><%= sewed_clothing.owner_name %></div>
  <div class="col-md-2"><span class="field-label">Clothing Type: </span><%= sewed_clothing.clothing_type.name %></div>
  <div class="col-md-1"><span class="field-label">Quantity: </span><%= sewed_clothing.quantity %></div>
  <div class="col-md-1">
    <span class="field-label">Unit Price: </span><%= number_to_currency(sewed_clothing.clothing_type.unit_price, unit: "₱ ") %>
  </div>
  <div class="col-md-2"><span class="field-label">Total: </span><%= number_to_currency(sewed_clothing.total, unit: "₱ ") %></div>
  <div class="col-md-3">
    <div class="row no-print field-margin">
      <div class="col-md-6">
        <%= link_to "Edit", edit_employee_sewed_clothing_path(@employee, sewed_clothing), class: "btn btn-warning btn-block" %>
      </div>
      <div class="col-md-6">
        <%= link_to "Delete", employee_sewed_clothing_path(@employee, sewed_clothing), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-block" %>
      </div>
    </div>
  </div>  
<% end %>